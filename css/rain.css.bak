.rain {
  position: fixed;
  z-index: -3;
  display: none;
  width: 2px;
  height: 50px;
  background-image: linear-gradient(  #BCD2D677, #B9F7FFAA );
  /*background-color: blue;*/
  top: 0px;
  left: 0px;
  transition: all 0.01s linear;
}

.cloud0, .cloud1 {
  z-index: -2;
  display: none;
  position: fixed;
  top: 0px;
  left: 0px;
  filter: contrast( 50% );
}

.cloud1 {
  filter: brightness( 50% ) contrast(170%);
  z-index: -4;
}